@model MonitoreoModels.Categoria

@{    
    var usuario = Session["user"] as MonitoreoModels.Usuario;
    if (usuario == null || usuario.Rol != "A")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutA.cshtml";
    }
    ViewBag.Title = "Details";

}
    

<h2>Información de Categoria</h2>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>

    </dl>
</div>
<p>
    @if (Session["user"] != null)
    {
        @Html.ActionLink("Editar", "Edit", new { id = Model.CategoriaID })
    }
    @Html.ActionLink("Regresar a lista", "Index")
</p>
