@model IEnumerable<MonitoreoModels.Categoria>

@{    
    var usuario = Session["user"] as MonitoreoModels.Usuario;
    if (usuario == null || usuario.Rol != "A")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutA.cshtml";
    }
    ViewBag.Title = "Categorias";
}
   


<h2>Lista de Categorias</h2>

<p>
    @if (Session["user"] != null)
    {@Html.ActionLink("Crear Nueva Categoria", "Create")}

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCategoria)
        </td>
        <td>
            @if (Session["user"] != null)
            {
                @Html.ActionLink("Editar |", "Edit", new { @id = item.CategoriaID })
                @Html.ActionLink(" Eliminar |", "Delete", new { @id = item.CategoriaID })
            }
            @Html.ActionLink(" Detalles", "Details", new { @id = item.CategoriaID })

        </td>
    </tr>
}

</table>
