@model IEnumerable<NewsModel.Seccion>

@{
    if (Session["user"] == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutA.cshtml";
    }
    ViewBag.Title = "Index";
}

<h2>Lista de Secciones</h2>

<p>
    @if (Session["user"] != null)
    {@Html.ActionLink("Crear Nueva Sección", "Create")}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreSeccion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreSeccion)
        </td>
        <td>
            @if (Session["user"] != null)
            {
                @Html.ActionLink("Editar |", "Edit", new { id = item.SeccionID })
                @Html.ActionLink(" Eliminar |", "Delete", new { id = item.SeccionID })
            }

            @Html.ActionLink(" Detalles", "Details", new { id = item.SeccionID })

        </td>
    </tr>
}

</table>
